@model Vaperoom.Storage.Entity.RegisterModel
<head>
    <link rel="stylesheet" href="~/css/Profil.css" /> @*стили для регистрации/профиля/логина*@
</head>
<body>
    <div class="wrapper">
        <center>
            <h2 style="color:white;">Регистрация</h2>

            <form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
                <div class="validation" asp-validation-summary="ModelOnly"></div>
                <div style="width: 200px; height: 190px;">
                    <div>
                        <label s asp-for="Nickname">Введите Никнейм</label><br />
                        <input type="text" asp-for="Nickname" />
                    </div>
                    <div>
                        <label  asp-for="Email">Введите Email</label><br />
                        <input type="text" asp-for="Email" />
                        <span asp-validation-for="Email" />
                    </div>
                    <div>
                        <label  asp-for="Password">Введите пароль</label><br />
                        <input asp-for="Password" />
                        <span asp-validation-for="Password" />
                    </div>
                    <div>
                        <label  asp-for="PasswordConfirm">Повторите пароль</label><br />
                        <input asp-for="PasswordConfirm" />
                        <span asp-validation-for="PasswordConfirm" />
                    </div>
                    <div>
                        <input type="submit" value="Регистрация" class="btn" />
                    </div>
                </div>
            </form>
            <h4>Уже зарегистрированы? <a asp-action="Login" asp-controller="Account" class="btn_register">Войти</a></h4>
        </center>
    </div>
</body>