@model List<Vaperoom.Storage.Entity.Product>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Вейп Шоп | Vape shop</title>
    <link rel="stylesheet" href="style.css">
</head>
<body>
    @*<div class="header-margin"></div>*@
    <div class="newproducts">

        <h1 class="product-title">@ViewBag.Type</h1>
        @foreach (var Product in Model)
        {

            <a href=@Url.Action("Product","Products",new { ProductId = Product.ProductID}) style="display: block;">
                <div class="new">
                    <div class="previev">
                        <img src=@Product.Img alt="" width="250" height="235">
                    </div>
                    <p class="nameprod">@Product.Name</p>
                    <p class="price">@Product.Value ₽</p>
                </div>
            </a>
        }
    </div>
</body>
</html>